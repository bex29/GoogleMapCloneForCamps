<% layout('layout/boilerplate') %>
<h1>All Campgrounds</h1>
<h2><a href="/campgrounds/new">Add new</a></h2>

<% for (let camp of camps){ %>

<div class="card mb-3" style="max-width: 1500px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%=camp.image %> " class="img-fluid rounded-start" alt="..." />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">$<%= camp.price %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %> </small>
        </p>
        <a class="btn btn-primary" href="campgrounds/<%=camp.id %>"
          >See Details</a
        >
      </div>
    </div>
  </div>
</div>
> <% } %>
